{
  "name": "Automalix-Repair-Nodes",
  "nodes": [
    {
      "parameters": {
        "operation": "create",
        "repository": "automalix-kit-{{ $json.kitName }}",
        "description": "{{ $json.description }}",
        "private": true,
        "owner": "YOUR_GITHUB_USERNAME"
      },
      "id": "github",
      "name": "GitHub Repo",
      "type": "n8n-nodes-base.github",
      "typeVersion": 1,
      "position": [950, 300],
      "credentials": {
        "githubApi": "GitHub"
      }
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://api.gumroad.com/v2/products",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "headers": {
          "Authorization": "Bearer {{ $credentials.gumroad.token }}"
        },
        "body": "json",
        "bodyJson": "={\"name\":\"{{$json.kitName}}\",\"price\":\"{{$json.price}}\",\"currency\":\"USD\",\"description\":\"{{$json.salesPage}}\",\"custom_receipt\":\"Access repo: https://github.com/YOUR_GITHUB_USERNAME/{{$json.kitName}}\",\"require_shipping\":false}"
      },
      "id": "gumroad",
      "name": "Gumroad Product",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1250, 300],
      "credentials": {
        "httpHeaderAuth": "Gumroad"
      }
    },
    {
      "parameters": {
        "fromEmail": "offers@automalix.com",
        "toEmail": "{{ $json.email }}",
        "subject": "{{ $json.subject }}",
        "text": "{{ $json.body }}",
        "options": {
          "allowUnauthorizedCerts": true
        }
      },
      "id": "email",
      "name": "Cold-Email Sender",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [1550, 300],
      "credentials": {
        "smtp": "SendGrid"
      }
    },
    {
      "parameters": {
        "operation": "append",
        "databaseId": "{{ $json.databaseId }}",
        "title": "{{ $json.kitName }}",
        "properties": {
          "Kit": "{{ $json.kitName }}",
          "Price": "={{ $json.price }}",
          "Revenue": "={{ $json.revenue }}"
        }
      },
      "id": "notion",
      "name": "Notion CRM",
      "type": "n8n-nodes-base.notion",
      "typeVersion": 2,
      "position": [1850, 300],
      "credentials": {
        "notionApi": "Notion"
      }
    }
  ],
  "connections": {},
  "active": false,
  "settings": {
    "executionOrder": "v1"
  },
  "versionId": "1.0.0",
  "meta": {
    "templateCredsSetup": true
  }
}
